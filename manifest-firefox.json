{
  "manifest_version": 3,
  "name": "M3U8/HLS Player - Custom Keyboard Shortcuts",
  "version": "1.4.4",
  "description": "Advanced M3U8/HLS player with customizable controls. Supports keyboard shortcuts, PIP mode, frame navigation, and live streams.",
  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*",
    "http://*/*",
    "https://*/*",
    "file:///*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.html",
        "*.js",
        "*.css",
        "*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "action": {
    "default_title": "M3U8/HLS Player",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' ; object-src 'self' ;"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{1dcebb07-6afe-48b8-9b52-2dd1d15979e4}"
    },
    "data_collection_permissions": {
      "required": [
        "none"
      ]
    }
  }
}