{
  "manifest_version": 2,
  "name": "M3U8/HLS Player with Custom Controls",
  "version": "1.0",
  "description": "Advanced M3U8/HLS player with customizable controls. Supports keyboard shortcuts, PIP mode, frame navigation, and live streams.",
  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "activeTab",
    "*://*/*",
    "http://*/*",
    "https://*/*",
    "file:///*",
    "<all_urls>"
  ],
  "web_accessible_resources": ["*.html", "*.js", "*.css", "*.png"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "icons": {
    "16": "icon16.png",
    "19": "icon19.png",
    "32": "icon32.png",
    "38": "icon38.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
